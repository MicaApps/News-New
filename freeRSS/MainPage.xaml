            <DataTemplate x:Key="FeedsListItemTemplate"
                      x:DataType="viewmodels:FeedsListItemViewModel">
                <muxc:NavigationViewItem Icon="{x:Bind IconElement}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="Title"
                               VerticalAlignment="Center"  
                               Grid.Column="1" 
                               Text="{x:Bind Title, Mode=OneWay}" 
                               Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}" 
                               Margin="10,1,0,0" 
                               Height="20"/>
                        <TextBlock Margin="11,1,0,0"
                               x:Name="Subtitle"
                               Text="{x:Bind SubTitle, Mode=OneWay}" 
                               Grid.Column="2" VerticalAlignment="Center" 
                               Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}" HorizontalAlignment="Center" 
                               Height="20" Width="24"/>
                    </StackPanel>
                </muxc:NavigationViewItem>
            </DataTemplate>

            <!--Article template-->
            <DataTemplate x:Key="RSS_ArticleTemplate"
                      x:DataType="models:ArticleModel" >
                <Grid Margin="0,3,0,3" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid ToolTipService.ToolTip="Unread"
                      Grid.Column="0"
                      Width="20" 
                      Height="20"
                      Background="Transparent"           
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top" 
                      CornerRadius="2" Margin="-5,10,6,0" 
                      Padding="0,1,0,0">
                        <Image Width="17" Height="17" 
                           Source="{x:Bind FeedIconSource, Mode=OneWay}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="0 5 10 5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{x:Bind FeedName, Mode=OneWay}" Grid.Row="0"
                               Foreground="Gray"
                               FontSize="10"
                               Margin="0,5,0,0"/>
                        <TextBlock Text="{x:Bind PubDate, Mode=OneWay, Converter={StaticResource StringToDateTimeConverter}}" 
                               Grid.Row="0" 
                               Foreground="Gray" 
                               FontSize="10" 
                               UseLayoutRounding="True"
                               HorizontalAlignment="Right" 
                               Margin="110,0,0,0"/>
                        <TextBlock TextWrapping="Wrap"
                               MaxLines="2"
                               TextTrimming="CharacterEllipsis"
                               Text="{x:Bind Title, Mode=OneWay}" 
                               Grid.Row="1"
                               FontWeight="Bold"
                               Margin="0 0 0 10"
                               
                               />
                        <TextBlock Text="{x:Bind Summary, Mode=OneWay}" 
                               Foreground="LightGray" 
                               Grid.Row="2" 
                               FontSize="11" 
                               Margin="0,0,0,5"
                               TextWrapping="Wrap"
                               MaxLines="3"
                               TextTrimming="CharacterEllipsis" 
                               />
                    </Grid>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
